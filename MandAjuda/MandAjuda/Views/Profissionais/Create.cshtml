                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Cep, htmlAttributes: new { @class = "control-label col-md-2", @type = "text", @name = "cep" })
                            <div style="margin-left: 25px;" class="col-md-6">
                                @Html.EditorFor(model => model.Cep, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Cep, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Endereco, htmlAttributes: new { @class = "control-label col-md-2", @type = "text", @name = "endereco" })
