    <!--================Header Area =================-->

    <div class="container-fluid">

        @model MandAjuda.Models.Profissional
        @{
            ViewBag.Title = "Create";
        }
        <center>
            <hr />
            <h2>Profissional Liberal</h2>
            <hr />
        </center>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="row">
                    @*DIV*@
                    <div class="col-sm-6">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.NomeCompleto, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div style="margin-left: 25px;" class="col-md-6">
                                @Html.EditorFor(model => model.NomeCompleto, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NomeCompleto, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Profissao, htmlAttributes: new { @class = "control-label col-md-2" })
